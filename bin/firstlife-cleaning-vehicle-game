#!/usr/bin/env bash

# This script prompts you to clean your vehicle in bite-sized blocks of time

. $SKIGGETY_UTILS_DIR/lib/skiggety-utils.bash || exit 1
. $SKIGGETY_UTILS_DIR/lib/firstlife.bash || exit_with_error 'could not use common firstlife code'

zl-wait-for-routine zl-morning

TRY_COUNT=0
zl-alarm "Time to tidy your vehicle!"
while ! shellask "Are you feeling good about the state of your vehicle for now?";do
    exit_if_day_is_over
    zl-break -t $(( 60 * ( 5 + ( $TRY_COUNT * 2 ) ) ))
    TRY_COUNT=$(( $TRY_COUNT + 1 ))
    zl-pomodoro --without-break --with-alarms --time-in-minutes $(( 4 + $TRY_COUNT))  "Tidy your vehicle"
done
