#!/usr/bin/env bash

# This script annoys the user until they respond, usually for a stated purpose

# EASY TODO^83: use this more widely

. $SKIGGETY_UTILS_DIR/lib/skiggety-utils.bash || exit 1
. $SKIGGETY_UTILS_DIR/lib/firstlife.bash || exit_with_error 'could not use common firstlife code'

MIN_SNOOZE_SECONDS=30

review -u $MIN_SNOOZE_SECONDS --non-interactive --no-clear --while firstlife-single-alarm "$*"

exit 0
