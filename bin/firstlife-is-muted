#!/usr/bin/env bash

# This script tests if firstlife is muted or not (so we know whether to play sounds)

. $SKIGGETY_UTILS_DIR/lib/skiggety-utils.bash || exit 1
. $SKIGGETY_UTILS_DIR/lib/firstlife.bash || exit_with_error 'could not use common firstlife code'

if ls ${FIRSTLIFE_MUTE_FILE_PREFIX}* > /dev/null 2>&1; then
    debug_here "Firstlife is muted"
    exit 0
else
    debug_here "Firstlife is not muted"
    exit 1
fi

exit_with_error "Should not get here"
