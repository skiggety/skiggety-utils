#!/usr/bin/env bash

# This script prompts you to do something from your 'vital' todo list, based on a tag

. $SKIGGETY_UTILS_DIR/lib/skiggety-utils.bash || exit 1


if ! [[ -z "$1" ]]; then
    TAG="$1"
    shift
fi

debug_eval TAG
firstlife-iterate-on-vital-tag -n 1 $TAG || exit_with_error "skipped doing something tagged '$TAG'."
