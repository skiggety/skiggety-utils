#!/usr/bin/env bash

THIS_DIR="$(cd "$(dirname $BASH_SOURCE)";pwd)"
. $THIS_DIR/../lib/skiggety-utils.bash || exit 1

TASK_DESCRIPTION="$@"
banner='########################################################################'

# ding
tput bel

bash --rcfile <(cat ~/.bashrc; echo "PS1=\"${newline}$banner${newline}# TODO:${newline}# 1.) $TASK_DESCRIPTION${newline}# 2.) Run \\\"exit 0\\\" for success, \\\"exit 1\\\" to give up and fail.${newline}$banner${newline}\$PS1\"") - # IGNORE_TODO
exit $?
