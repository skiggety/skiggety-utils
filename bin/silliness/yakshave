#!/usr/bin/env bash

# This script is a place for doing pointless things, to be used sparingly and with self-awareness.

clear

pushd $SKIGGETY_UTILS_DIR >/dev/null

# TODO^2? : turn this into a linter:
# Find sentences in comments with single spaces between them.
rg -n --color=always '#.*\. [^ $\[|."-]' . | sort | \
    grep -v '^[^:\w]*version.txt' | \
    grep -v '^[^:\w]*./bin/git-pretty-pull' | \
    abbreviate -n 19 -t 'find single spaces between sentences' -d
firstlife-delegate --with-reward 'fix a single space between sentences (see above)'

dashboard
firstlife-delegate --with-reward 'commit something, probably using "ci && git ready && yup".'

popd >/dev/null

today_todo -n | grep --color=always '\(ME''TA\|--------\|^$\)' | abbreviate -l 20 # EASY TODO^85: EXTRACT, and REUSE
firstlife-delegate --with-reward 'work on META tasks (maybe use "vf firstlife-iterate-on-vital-tag -n 3 META")'
