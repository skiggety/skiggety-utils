#!/usr/bin/env bash

# This script sleeps for a specified number of seconds, displaying progress as
# it goes.

PRINT_NEWLINE=true
if [ "$1" == "-n" ];then
    PRINT_NEWLINE=false
    shift
fi

function main {
    delay="$1"

    delay_remaining="$delay"

    while [ "$delay_remaining" -gt 0 ]; do
        echo -ne "  sleeping for $delay_remaining/$delay seconds\033[0K\r"
        sleep 1
        : $((delay_remaining--))
    done
    echo -ne "  DONE! ($(basename $0) slept for $delay seconds)\033[0K\r"

    if $PRINT_NEWLINE; then
        echo
    fi
}

# TODO^6: DELETE this script once you're sure it's not used
echo "# oops, ran \"$0 $*\" at $(date)" >> $0
main "$@"
exit_with_error "oops, please use sleep-verbose instead of pretty_sleep"

