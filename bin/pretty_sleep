#!/usr/bin/env bash

# This script sleeps for a specified number of seconds, displaying progress as
# it goes.

# TODO?: show a clock, optionally
# TODO?: integrate into a banner

function main {
    delay="$1"

    delay_remaining="$delay"

    while [ "$delay_remaining" -gt 0 ]
    do
        echo -ne "  sleeping for $delay_remaining/$delay seconds\033[0K\r"
        sleep 1
        ((delay_remaining--))
    done

    echo
}
main "$@"
