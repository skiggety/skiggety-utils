#!/usr/bin/env bash

# This script helps the user to make sure changes to zerothlife get committed and pushed

. $SKIGGETY_UTILS_DIR/lib/skiggety-utils.bash || exit 1
. $ZEROTHLIFE_CODE_DIR/lib/zerothlife.bash || exit_with_error "could not source zerothlife.bash"

cd $ZEROTHLIFE_CODE_DIR && git-clean-up-local-changes || exit_with_error "did not clean up changes in zerothlife repo"

cd $SKIGGETY_UTILS_DIR
if git status -s | grep zerothlife; then
    clean-up-su-local-changes || exit_with_error "did not clean up zerothlife changes in skiggety-utils repo"
fi

clean-up-firstlife-local-changes # TODO^6: delete when there is no more legacy 'firstlife'
