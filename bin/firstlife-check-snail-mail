#!/usr/bin/env bash

# This script prompts you to get the mail

. $SKIGGETY_UTILS_DIR/lib/skiggety-utils.bash || exit 1

# TODO^13: test that we make it here regularly:
firstlife-delegate --limit-n-times-per-x 1 day "Go get your (snail) mail from the mailbox" || exit_with_error "Did not get the snail mail"
# TODO^36: test that we make it here regularly:
firstlife-delegate --limit-n-times-per-x 2 day "Deal with at least one pending piece of mail" || exit_with_error "Did not keep up with snail mail"
