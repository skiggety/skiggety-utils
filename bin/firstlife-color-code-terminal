#!/usr/bin/env bash

# This script helps get a terminal's color changed to help the user keep track of many terminals with different urgencies and purposes

. $SKIGGETY_UTILS_DIR/lib/skiggety-utils.bash || exit 1
. $SKIGGETY_UTILS_DIR/lib/firstlife.bash || exit_with_error 'could not use common firstlife code'

# TODO^73: (IN_PROGRESS) USE widely

TITLE='???'
while [[ "$1" == -* ]]; do
    if [ "$1" == '--for' ]; then
        shift
        TITLE="$1"
        shift
    fi
done

# TODO: maybe if Title wasn't specified, we could mention the name of the calling script:
zl-delegate "Please change the color of this terminal to indicate the urgency of $newline    '$TITLE' (for $FIRSTLIFE_ISOTODAY)" || exit 1
