#!/usr/bin/env bash

. $SKIGGETY_UTILS_DIR/lib/skiggety-utils.bash

for command in \
    'git add -p' \
    'git vimdiff --staged' \
    'git commit' \
    'git pull' \
    'git push -u'
do
    echo
    echo "running \"$command\" momentarily, press CTRL+C to stop..."
    pretty_sleep 2
    $command || exit_with_error "Command \"$command\" failed."
done
