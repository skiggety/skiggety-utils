#!/usr/bin/env bash

# This script is a placeholder for 'vital --list-by-tag' which would list all todos matching a given tag

. $SKIGGETY_UTILS_DIR/lib/skiggety-utils.bash || exit 1
. $SKIGGETY_UTILS_DIR/lib/vital.bash || exit_with_error 'could not include vital.bash'

# TODO^141?: accept multiple tags?

cd $VITAL_DIR
if [ "$1" == 'LATER' ]; then
    vital-todo | grep "$1" | highlight-ALLCAPS 2>/dev/null
else
    vital-todo | grep -v 'LATER' | grep "$1" | highlight-ALLCAPS 2>/dev/null
fi
