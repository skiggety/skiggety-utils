#!/usr/bin/env bash

# This script shows the circle of semitones

. $SKIGGETY_UTILS_DIR/lib/skiggety-utils.bash || exit 1
. $SKIGGETY_UTILS_DIR/lib/music_visuals.bash || exit 1

echo -e "
                $C
        $B   _______    $Cs
          .-' _____ '-.
        .' .-'     '-. '.
   $Bb / .'           '. \\   $D
      / /               \\ \\
     | |                 | |
 $A  | |                 | |   $Eb
     | |                 | |
      \\ \\               / /
   $Ab \\ '.           .' /   $E
        '. '-.___ _.-' .'
          '-._______.-'
        $G              $F
                $Fs
"
