#!/usr/bin/env ruby
# frozen_string_literal: true

# TODO TODO TODO TODO TODO TODO: automate https://dev.to/iggredible/how-to-search-faster-in-vim-with-fzf-vim-36ko

require_relative '../lib/installable_skiggety_util'

class FzfInstaller

  include InstallableSkiggetyUtil

  def apparently_installed?
    system 'which fzf'
  end

  def apparently_configured?
    true # no config
  end

  def install
    if on_mac_os?
      brew_install_latest 'fzf'
    else
      raise 'TODO: IMPLEMENT'
    end
  end

end

FzfInstaller.run
